    </servlet>
    <servlet-mapping>
        <servlet-name>SetUrl</servlet-name>
        <url-pattern>/setUrl</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MaintainAffairsController</servlet-name>
        <servlet-class>com.ks.controller.MaintainAffairsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MaintainAffairsController</servlet-name>
        <url-pattern>/maintainAffairsController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModifyAffairController</servlet-name>

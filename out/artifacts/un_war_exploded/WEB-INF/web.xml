<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>QueryController</servlet-name>
        <servlet-class>com.ks.controller.QueryController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>QueryController</servlet-name>
        <url-pattern>/queryController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.ks.controller.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/loginController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SortController</servlet-name>
        <servlet-class>com.ks.controller.SortController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SortController</servlet-name>
        <url-pattern>/sortController</url-pattern>
    </servlet-mapping>
</web-app>

